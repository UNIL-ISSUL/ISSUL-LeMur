<NumericInput> :
    orientation : 'vertical'
    Label :
        text :root.name + " : " + "{:.2f}".format(root.value) + " / " + "{:.2f}".format(root.target) + " " + root.unit
        font_size : 25
        disabled : root.hidden
    # Slider : 
    #     disabled : root.hidden
    #     min : root.min_value
    #     step : root.increment_list[1]
    #     max : root.max_value
    #     value : root.target
    #     on_value : root.slider_change(self.value)
    TextInput :
        multiline : False
        size_hint_y : None
        height : 40 
        disabled : root.hidden
        text : "{:.2f}".format(root.target)
        on_text_validate : root.slider_change(float(self.text))
    BoxLayout :
        orientation : 'horizontal'
        BoxLayout :
            orientation : 'vertical'
            ToggleButton :
                disabled : root.hidden
                text : str(root.increment_list[0])
                group : root.name
                on_press : root.set_increment(root.increment_list[0])
            ToggleButton : 
                disabled : root.hidden
                text : str(root.increment_list[1])
                group : root.name
                state : 'down'
                on_press : root.set_increment(root.increment_list[1])
            ToggleButton :
                disabled : root.hidden
                text : str(root.increment_list[2])
                group : root.name
                on_press : root.set_increment(root.increment_list[2])
        BoxLayout :
            orientation:'vertical'
            Button :
                disabled : root.hidden
                text : '-'
                on_press : root.decrease()
            Button :
                disabled : root.hidden
                text : '+'
                on_press : root.increase()
        BoxLayout :
            orientation: 'vertical'
            Button :
                text : 'SET'
                disabled : automatic_button.state == 'down' or root.hidden
                on_press : app.update_targets(root,True)
            ToggleButton :
                disabled : root.hidden
                id : automatic_button
                state : 'down' if root.auto_update else 'normal'
                text : 'Mode auto' if self.state == 'down' else 'Mode manuel'
                on_press : root.toggle_auto_update(automatic_button.state)

<NumericInputCompact> :
    orientation : 'vertical'
    Label :
        text :root.name + ": " + "{:.1f}".format(root.value) + " " + root.unit
        font_size : 24
    BoxLayout : 
        orientation : 'horizontal'
        Button :
            text : "-"
            on_press : root.decrease()
        Button :
            text : "{:.1f}".format(root.value)
        Button :
            text : "+"
            on_press : root.increase()


#:import timedelta datetime.timedelta

<NumericDisplay>
    text: root.name +' : '+ "{:.2f}".format(root.value) +' '+ root.unit if not root.has_target else root.name +' : '+ "{:.2f}".format(root.value) + ' / ' + "{:.2f}".format(root.target) + '  ' + root.unit  
    font_size : 25

<StatusDisplay>
    orientation : 'horizontal'
    spacing : 10
    Led :
        #size_hint_x : 0.2
        source: 'shapes/basic_squarerounded.png'
        state : 'on' if root.active else 'off'
        id : led
    Label :
        text : root.name
        font_size : 18
        #text_size : self.size
    	valign : 'center'
    	halign : 'left'

<Controller@GridLayout>
    cols : 2
    spacing : 10
    NumericDisplay :
        name : 'inclinaison'
        unit : '°'
        value : app.tilt_value
        target : app.tilt_target
        has_target : True
    NumericDisplay :
        name : 'Distance'
        unit : 'm'
        value : app.elapsed_distance
    NumericDisplay :
        name : app.speed_text
        unit : 'km/h'
        value : app.belt_speed_value
        target : app.belt_speed_target
        has_target : True
    NumericDisplay
        name : 'Dénivelé'
        unit : 'm'
        value : app.elapsed_elevation
    NumericDisplay :
        name : 'Vitesse verticale'
        unit : 'm/h'
        value : app.vertical_speed_value
        target : app.vertical_speed_target
        has_target : True
    Label : 
        text : 'Durée : ' + str(timedelta(seconds=app.elapsed_time)).split('.', 2)[0]
        font_size : 25
    ToggleButton : 
        id : stop
        text : 'Stop'
        state : 'down'
        group : 'controller'
        on_press : app.stop()
    ToggleButton :
        id : start
        text : 'Start'
        group : 'controller'
        on_press : app.start()

<Status@BoxLayout> :
    orientation : 'horizontal'
    spacing : 10
    StatusDisplay :
        name : 'Sécurité gauche'
        active : app.safety_left
    StatusDisplay :
        name : 'Sécurité droit'
        active : app.safety_right
    StatusDisplay :
        name : 'Sécurité avant'
        active : app.safety_front
    StatusDisplay :
        name : 'Sécurité arrière'
        active : app.safety_back
    StatusDisplay :
        name : 'Arret urgence'
        active : app.safety_emergency

<Ramp> :
    id : ramp
    orientation : 'vertical'
    size_hint_y : 0.1
    BoxLayout : 
        orientation : 'horizontal'
        Switch :
            id : switch
            size_hint_x : 0.1
            active : root.state
            on_active : root.toggle_state(switch.active)
        Label :
            text : "Mode Rampe"
            font_size : 24
    GridLayout : 
        disabled : not switch.active
        cols : 2
        spacing : 10
        NumericInputCompact :
            id : start_speed
            name : 'Vitesse initiale'
            unit : 'km/h'
            value : 12
            on_value : root.compute_duration(0)
        NumericInputCompact :
            id : stop_speed
            name : 'Vitesse finale'
            unit : 'km/h'
            value : 4
            on_value : root.compute_duration(0)
        NumericInputCompact :
            id : step_speed
            name : 'Incrément vitesse'
            unit : 'km/h'
            min : 0.1
            max : 1
            step : 0.1
            value :0.1
            on_value : root.compute_duration(0)
        NumericInputCompact :
            id : step_duration
            name : 'Durée palier'
            unit : 's'
            value : 10
            on_value : root.compute_duration(0)
    
        NumericDisplay :
            name : "Durée"
            unit : "min"
            value : root.duration_min
        
        Button :
            text : "Initialisation"
            on_press : app.init_ramp(start_speed.value)
#Manual Windows
<ManualWidget@BoxLayout>:

    orientation : 'vertical'
    padding : 10
    spacing : 10
    id : main

    Label :
        text : 'Controle de la vitesse verticale :'
        size_hint_y : 0.1
        font_size : 24

    BoxLayout :
        orientation : 'horizontal'
        size_hint_y : 0.1
        spacing : 10
        ToggleButton :
            text : 'Aucun'
            group : 'vertical_speed'
            state : 'down'
            on_press : app.mode_changed(self)
        ToggleButton :
            text : 'Inclinaison'
            group : 'vertical_speed'
            on_press : app.mode_changed(self)
        ToggleButton :
            text : 'Vitesse tapis'
            group : 'vertical_speed'
            on_press : app.mode_changed(self)

    GridLayout :
        cols :3
        spacing : 10
        padding : 0

        NumericInput :
            id : tilt
            target : app.tilt_target
            value : app.tilt_value
            on_target : app.update_targets(tilt)
            name : 'Inclinaison'
            unit : '°'
            min_value : 1   #limité par le l'axe des poulies des courroies
            max_value : 40  #limité par le l'axe des poulies des courroies
            auto_update : False
        
        NumericInput :
            id : belt_speed
            value : app.belt_speed_value
            target : app.belt_speed_target
            on_target : app.update_targets(belt_speed)
            name : app.speed_text
            unit : 'km/h'
            min_value : 0
            max_value : 15
            auto_update : True

        NumericInput :
            id : vertical_speed
            hidden : True
            target : app.vertical_speed_target
            value : app.vertical_speed_value
            on_target : app.update_targets(vertical_speed)
            name : 'Vitesse verticale'
            unit : 'm/h'
            min_value : 100
            max_value : 3500
            auto_update : True
            increment_list : [10, 50, 100]

    BoxLayout : 
        orientation : 'vertical'
        canvas.before:
            Color:
                rgba: (204/255, 82/255, 0/255,1) if app.steps_active else (0, 0, 0, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        
        size_hint_y : 0.3
        padding : [0,0,0,20]

        Label :
            text : 'Surface de marche'
            font_size : 24
        BoxLayout :
            orientation : 'horizontal'
            spacing : 10
            ToggleButton :
                text : 'Bande'
                group : 'steps'
                state : 'down'
                on_press : app.toggle_steps(False)
            ToggleButton :
                text : 'Marches'
                group : 'steps'
                on_press : app.toggle_steps(True)

    Controller :
        id : controller
    
    BoxLayout : 
        size_hint_y : 0.2
        orientation : 'vertical'
        padding : [0,20,0,20]
        spacing : 20
        canvas.before:
            Color:
                rgba: (204/255, 82/255, 0/255,1) if app.any_safety else (0, 0, 0, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label :
            text : 'Status des sécurités'
            font_size : 24
            markup : True

<MainScreenManager>:
    id: screen_manager

    Screen:
        name: "manual_tab"
        ManualWidget:
            id: manual_widget

    Screen:
        name: "incremental_tab"
        IncrementalWidget:
            id: incr_widget

 

BoxLayout :
    orientation: "vertical"

     # --- Barre d'onglets ---
    BoxLayout:
        size_hint_y: None
        height: "40dp"

        ToggleButton:
            text: "Contrôle manuel"
            group: "tabs"
            state: "down"
            on_release: screen_manager.current = "manual_tab"

        ToggleButton:
            text: "Test incrémental"
            group: "tabs"
            on_release: screen_manager.current = "incremental_tab"

    # --- Contenu des onglets ---
    MainScreenManager:
        id: screen_manager
