    BoxLayout : 
        disabled : not switch.active
        orientation : 'horizontal'
        NumericDisplay :
            id : start_angle
            name : "Angle début"
            unit : "deg"
            value : app.tilt_out
        NumericDisplay :
            id : stop_angle
            name : "Angle fin"
            unit : "deg"
            value : app.tilt
    
    BoxLayout :
        disabled : not switch.active
        orientation : 'horizontal'
        NumericDisplay :
            id : angular_speed
            name : "Vitesse angulaire"
            unit : "deg/min"
            value : slider.value

        Slider :
            id : slider
            min : 1
            step : 1
            max : 10
            on_value : root.compute_duration(self.value,start_angle.value,stop_angle.value)
    
    BoxLayout :
        disabled : not switch.active
        orientation : 'horizontal'
        padding : 20
        NumericDisplay :
            name : "Durée"
            unit : "min"
            value : root.duration_min
        
        ToggleButton :
            text : "start"
            on_press : app.start_ramp(start_angle.value,stop_angle.value,angular_speed.value)
